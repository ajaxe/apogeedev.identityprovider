{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/ApogeeDev.IdentityProvider.Host/ApogeeDev.IdentityProvider.Host.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/ApogeeDev.IdentityProvider.Host/ApogeeDev.IdentityProvider.Host.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "${workspaceFolder}/src/ApogeeDev.IdentityProvider.Host/ApogeeDev.IdentityProvider.Host.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Start Vite Dev Server",
      "type": "shell",
      "command": "pnpm run dev",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/src/idp-manager-app"
      },
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "VITE.*ready in.*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE v.*dev server running at:",
          "endsPattern": "VITE.*ready in.*"
        }
      }
    }
  ]
}
